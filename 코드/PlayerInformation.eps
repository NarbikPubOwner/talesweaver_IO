/**
 * 유닛의 사망 시점을 기록합니다. -1 : 사망하지 않음, 0 : 사냥 스테이지 사망 1: 보스 스테이지 사망
 */
const stageNumOfDeath = PVariable();
const graveStoneEpd = PVariable();
function Init() {
    foreach (cp : EUDLoopPlayer(None, Force1)) {
        class_id[cp] = 228;
        QskillCanUseFlag[cp] = true;
        EskillCanUseFlag[cp] = true;

        hunt_zone_level[cp] = 0;
        huntZoneEnemyCount[cp] = 0;
        hpLevel[cp] = 0;
        potionLevel[cp] = 0;
        QSkillLevel[cp] = 0;
        WSkillLevel[cp] = 0;

        stageNumOfDeath[cp] = -1;
    }
}

function huntZoneLevelIncrease(cp) {
    hunt_zone_level[cp] = hunt_zone_level[cp] + 1;
}
function huntZoneLevelDecrease(cp) {
    hunt_zone_level[cp] = hunt_zone_level[cp] - 1;
}